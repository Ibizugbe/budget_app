<%= form_with(model: [@group, @entity]) do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_area :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<div class="actions_expense">
  <% if @entity.id != nil && current_page?(edit_group_entity_path(@group, @entity)) %>
    <%= button_to "Delete transaction", group_entity_path(@group, @entity), method: :delete, class: "app_button red_button" %>
  <% end %>
</div>