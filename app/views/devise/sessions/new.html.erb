<h2 class="text-success text-center mt-5 fw-bold display-3">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border border-2 bg-white border-success py-2"%>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control border border-2 bg-white border-success py-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn bg-success text-white col-7 mt-2 mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
